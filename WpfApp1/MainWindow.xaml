<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Object Manager" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Objects List -->
        <ListBox Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                 Margin="0,0,10,0" 
                 ItemsSource="{Binding Objects}" 
                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                 DisplayMemberPath="Name"/>

        <!-- Object Details -->
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Object Name:" Margin="0,5,0,5"/>
            <TextBox Text="{Binding ObjectName, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10" 
                     Padding="5"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom">
            <Button Content="New" Command="{Binding NewCommand}"/>
            <Button Content="Add" Command="{Binding AddCommand}"/>
            <Button Content="Save" Command="{Binding SaveCommand}"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}"/>
            <Button Content="Reload" Command="{Binding LoadCommand}"/>
        </StackPanel>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <TextBlock Text="Ready" Margin="5"/>
        </StatusBar>
    </Grid>
</Window>